@model Invitaciones.Entidades.Invitado

@{
    Layout = null;
    var fechaBoda = new DateTime(2026, 5, 24, 18, 0, 0);
    var diasRestantes = (fechaBoda - DateTime.Now).Days;
    var yaConfirmado = (Model.Estado == Invitaciones.Enums.EstadoInvitado.Confirmado);
    var googleMapsUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.483256073172!2d-99.135479!3d19.432601!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDI1JzU3LjQiTiA5OcKwMDgnMDcuNyJX!5e0!3m2!1ses-419!2smx!4v1620000000000!5m2!1ses-419!2smx";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Julisa & Jorge - Nuestra Historia</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Cinzel:wght@400;700&family=Montserrat:wght@300;400;600&family=Playfair+Display:ital,wght@1,400;1,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>

    <style>
        :root {
            --gold-gradient: linear-gradient(135deg, #bf953f, #fcf6ba, #b38728, #fbf5b7, #aa771c);
            --dark-gold: #8d7a5b;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f4f4f4;
            background-image: url('https://www.transparenttextures.com/patterns/cream-paper.png');
            padding: 20px 0;
        }

        .premium-card {
            max-width: 650px;
            margin: 0 auto;
            background: white;
            padding: 60px 25px;
            box-shadow: 0 30px 60px rgba(0,0,0,0.15);
            text-align: center;
            border: 1px solid rgba(184, 162, 122, 0.2);
        }

        .wedding-names {
            font-family: 'Great Vibes', cursive;
            font-size: clamp(3.5rem, 10vw, 5rem);
            background: var(--gold-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        /* --- NUEVA SECCIÓN: NUESTRA HISTORIA --- */
        .story-section {
            background-color: #fdfbf7;
            padding: 30px 20px;
            margin: 40px 0;
            border-radius: 15px;
            border-left: 4px solid var(--dark-gold);
            position: relative;
        }

        .story-text {
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: 1.05rem;
            line-height: 1.8;
            color: #555;
        }

        .story-icon {
            color: var(--dark-gold);
            font-size: 1.5rem;
            margin-bottom: 15px;
            opacity: 0.6;
        }

        /* Estilos de las fotos */
        .photo-main {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border: 10px solid white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: rotate(-2deg);
        }

        .section-divider {
            font-family: 'Cinzel', serif;
            color: var(--dark-gold);
            letter-spacing: 3px;
            font-size: 0.8rem;
            margin: 40px 0 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .section-divider::before, .section-divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background: rgba(141, 122, 91, 0.3);
                margin: 0 15px;
            }

        .btn-premium {
            background: var(--gold-gradient);
            color: #4a3a1a !important;
            border: none;
            padding: 18px;
            font-weight: 700;
            letter-spacing: 2px;
            width: 100%;
            text-transform: uppercase;
        }

        .music-player {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 100;
        }

        .music-btn {
            background: white;
            border: 1px solid var(--dark-gold);
            color: var(--dark-gold);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>

    <div class="music-player">
        <button id="btnMusica" class="music-btn"><i class="fas fa-music"></i></button>
        <audio id="audioBoda" loop src="https://assets.mixkit.co/music/preview/mixkit-wedding-day-639.mp3"></audio>
    </div>

    <div class="container">
        <div class="premium-card">
            <div class="wedding-title" style="font-family:'Cinzel'; letter-spacing: 4px; color: var(--dark-gold);">NUESTRA BODA</div>
            <h1 class="wedding-names">Julisa & Jorge</h1>

            <div class="px-3 mb-5">
                <img src="https://images.pexels.com/photos/2253879/pexels-photo-2253879.jpeg?auto=compress&cs=tinysrgb&w=800" class="photo-main" alt="Novios">
            </div>

            <div class="section-divider">NUESTRA HISTORIA</div>
            <div class="story-section shadow-sm">
                <div class="story-icon"><i class="fas fa-quote-left"></i></div>
                <p class="story-text">
                    Todo comenzó con una simple mirada y un "hola" que cambió nuestras vidas para siempre.
                    Desde aquel primer café, supimos que queríamos escribir el resto de nuestros capítulos juntos.
                    Hoy, después de 5 años de risas, viajes y sueños compartidos, estamos listos para decir "Sí, acepto"
                    frente a las personas que más amamos.
                </p>
                <div class="mt-3" style="font-family: 'Great Vibes', cursive; font-size: 1.5rem; color: var(--dark-gold);">
                    Julisa & Jorge
                </div>
            </div>

            <div class="my-5">
                <p class="lead">Hola <strong>@Model.Nombre</strong>,</p>
                <p>Queremos que seas testigo del inicio de nuestra mayor aventura.</p>
            </div>

            <div class="section-divider">CUÁNDO Y DÓNDE</div>
            <div class="row text-start px-3 mb-4">
                <div class="col-12 mb-3">
                    <i class="fas fa-church me-2 text-gold" style="color:var(--dark-gold)"></i>
                    <strong>Ceremonia:</strong> 18:00 HRS | Catedral Metropolitana
                </div>
                <div class="col-12">
                    <i class="fas fa-glass-cheers me-2 text-gold" style="color:var(--dark-gold)"></i>
                    <strong>Recepción:</strong> 20:00 HRS | Salón Royal
                </div>
            </div>

            <div class="map-wrapper p-1 border shadow-sm mb-5">
                <iframe src="@googleMapsUrl" style="width: 100%; height: 250px; border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>

            <div class="row g-2 text-center mb-5">
                <div class="col-4">
                    <div class="p-3 border rounded bg-light">
                        <i class="fas fa-user-tie mb-1 d-block" style="color: var(--dark-gold);"></i>
                        <small class="d-block fw-bold" style="font-size:0.6rem">DRESS CODE</small>
                        <span style="font-size:0.7rem">Formal</span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-3 border rounded bg-light">
                        <i class="fas fa-gift mb-1 d-block" style="color: var(--dark-gold);"></i>
                        <small class="d-block fw-bold" style="font-size:0.6rem">REGALOS</small>
                        <span style="font-size:0.7rem">Mesa Regalos</span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-3 border rounded bg-light">
                        <i class="fas fa-envelope-open-text mb-1 d-block" style="color: var(--dark-gold);"></i>
                        <small class="d-block fw-bold" style="font-size:0.6rem">LLUVIA SOBRES</small>
                        <span style="font-size:0.7rem">Efectivo</span>
                    </div>
                </div>
            </div>

            <div class="confirm-section pt-3">
                @if (Model.Estado == Invitaciones.Enums.EstadoInvitado.Pendiente)
                {
                    <form asp-action="ConfirmarAsistencia" method="post">
                        <input type="hidden" name="nombre" value="@Model.Nombre" />
                        <button type="submit" name="confirmar" value="true" class="btn-premium mb-3 shadow">¡SÍ, ASISTIRÉ!</button>
                        <button type="submit" name="confirmar" value="false" class="btn btn-link text-muted small">No podré asistir</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-success border-0 py-4 shadow-sm" style="background:#f0f9f1">
                        <i class="fas fa-heart text-danger mb-2"></i>
                        <h5 class="fw-bold text-success">¡Confirmado!</h5>
                        <p class="small mb-0">Estamos felices de que nos acompañes.</p>
                    </div>
                }
            </div>

            <div class="mt-5 pt-4 border-top text-muted" style="font-size: 0.7rem; letter-spacing: 4px;">#JULISAYJORGE2026</div>
        </div>
    </div>

    <script>
        const audio = document.getElementById('audioBoda');
        const btn = document.getElementById('btnMusica');
        btn.onclick = () => { if (audio.paused) { audio.play(); btn.classList.add('playing'); } else { audio.pause(); btn.classList.remove('playing'); } };

        var confirmado = "@yaConfirmado".toLowerCase() === "true";
        if (confirmado) {
            var end = Date.now() + (4 * 1000);
            (function frame() {
                confetti({ particleCount: 3, angle: 60, spread: 55, origin: { x: 0 }, colors: ['#bf953f', '#b38728'] });
                confetti({ particleCount: 3, angle: 120, spread: 55, origin: { x: 1 }, colors: ['#bf953f', '#b38728'] });
                if (Date.now() < end) requestAnimationFrame(frame);
            }());
        }
    </script>

</body>
</html>